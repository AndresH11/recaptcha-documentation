import Layout from "@/layouts/Layout.astro";
import ConfigurationByEnvironment from "@/components/recaptchaV3/configuracionesAvanzadas/sections/ConfigurationByEnvironment.astro";
import ContentSecurityPolicy from "@/components/recaptchaV3/configuracionesAvanzadas/sections/ContentSecurityPolicy.astro";
import CustomTimeouts from "@/components/recaptchaV3/configuracionesAvanzadas/sections/CustomTimeouts.astro";
