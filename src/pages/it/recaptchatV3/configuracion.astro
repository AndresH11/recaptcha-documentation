---
import TitlePage from "@/components/common/TitlePage.astro";
import Layout from "@/layouts/Layout.astro";
import { type Props } from "@/components/common/PropsTable.astro";
import PropsOfTheRecaptchaV3ComponentSection from "@/components/recaptchaV3/configuracion/sections/PropsOfTheRecaptchaV3ComponentSection.astro";
import BaseConfigurationExampleSection from "@/components/recaptchaV3/configuracion/sections/BaseConfigurationExampleSection.astro";
import OptionsoftheHookuseRecaptchaSection from "@/components/recaptchaV3/configuracion/sections/OptionsoftheHookuseRecaptchaSection.astro";
