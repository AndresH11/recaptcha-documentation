---
import TitlePage from "@/components/common/TitlePage.astro";
import Layout from "@/layouts/Layout.astro";
import AccionesTransaccionalesSection from "@/components/recaptchaV3/apiReference/sections/AccionesTransaccionalesSection.astro";
import ConstantesDeConfiguracionSection from "@/components/recaptchaV3/apiReference/sections/ConstantesDeConfiguracionSection.astro";
import FactoryParaTestingSection from "@/components/recaptchaV3/apiReference/sections/FactoryParaTestingSection.astro";
import RecaptchaExecutionResultSection from "@/components/recaptchaV3/apiReference/sections/RecaptchaExecutionResultSection.astro";
import RecaptchaServiceSection from "@/components/recaptchaV3/apiReference/sections/RecaptchaServiceSection.astro";
import RecaptchaV3ResponseSection from "@/components/recaptchaV3/apiReference/sections/RecaptchaV3ResponseSection.astro";
import RefMethodsSection from "@/components/recaptchaV3/apiReference/sections/RefMethodsSection.astro";
import ScriptLoaderSection from "@/components/recaptchaV3/apiReference/sections/ScriptLoaderSection.astro";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations("ja");
---

<Layout
  titleKey="page.api-reference.title"
  descriptionKey="seo.description"
  keywords={t("seo.keywords")}
  image="/og-image.jpg"
  publishDate="2025-01-01"
  modifiedDate="2025-01-01"
  type="website"
  twitterHandle="@AndresH11"
>
  <main class="py-14 px-6 md:px-12 space-y-11">
    <TitlePage title={t("nav.api-reference")} />
    <RefMethodsSection lang="ja" />
    <TitlePage title={t("api.typescript-interfaces")} />
    <RecaptchaV3ResponseSection lang="ja" />
    <RecaptchaExecutionResultSection lang="ja" />
    <TitlePage title={t("api.services")} />
    <RecaptchaServiceSection lang="ja" />
    <FactoryParaTestingSection lang="ja" />
    <TitlePage title={t("api.utilities")} />
    <ScriptLoaderSection lang="ja" />
    <TitlePage title={t("api.predefined-constants")} />
    <AccionesTransaccionalesSection lang="ja" />
    <ConstantesDeConfiguracionSection lang="ja" />
  </main>
</Layout>
