---
import TitlePage from "@/components/common/TitlePage.astro";
import Layout from "@/layouts/Layout.astro";
import DescriptionSection from "@/components/recaptchaV3/comenzar/sections/DescriptionSection.astro";
import PreviousStepsSection from "@/components/recaptchaV3/comenzar/sections/PreviousStepsSection.astro";
import InstalationSection from "@/components/recaptchaV3/comenzar/sections/InstalationSection.astro";
import BasicUsageSection from "@/components/recaptchaV3/comenzar/sections/BasicUsageSection.astro";
import VisualExampleSection from "@/components/recaptchaV3/comenzar/sections/VisualExampleSection";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations("pt");
---

<Layout
  titleKey="page.start.title"
  descriptionKey="seo.description"
  keywords={t("seo.keywords")}
  image="/og-image.jpg"
  publishDate="2025-01-01"
  modifiedDate="2025-01-01"
  type="website"
  twitterHandle="@AndresH11"
>
  <main class="py-14 px-6 md:px-12 space-y-11">
    <TitlePage title={t("nav.start")} />
    <DescriptionSection />
    <TitlePage title={t("start.prerequisites")} />
    <PreviousStepsSection />
    <TitlePage title={t("start.installation")} />
    <InstalationSection />
    <TitlePage title={t("start.basic-usage")} />
    <BasicUsageSection />
    <TitlePage title={t("start.visual-example")} />
    <VisualExampleSection client:visible />
  </main>
</Layout>
