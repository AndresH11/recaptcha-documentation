---
import { Icon } from "astro-icon/components";
---

<div
  class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl h-[50px] bg-customGray rounded-xl items-center justify-center px-2 gap-x-2 hidden"
>
  <Icon name="mdi:search" size={30} class="text-white50 flex-shrink-0" />
  <div class="bg-customBlack rounded-xl w-full h-[40px] px-2">
    <input
      type="text"
      placeholder="Buscador"
      class="bg-transparent outline-none text-white/25 text-base sm:text-lg 2xl:text-xl w-full h-full"
    />
  </div>
  <button type="button" class="cursor-pointer flex-shrink-0">
    <Icon name="mdi:close" size={30} class="text-white50" />
  </button>
</div>
